<h1>Listing Users</h1>
<div class="row collapse">
  <%= form_tag users_path, method: :get do %>
  <div class="large-offset-8 large-3 columns small-8">
    <%= text_field_tag :search, params[:search] %>
  </div>
  <div class="large-1 columns small-4">
    <%= submit_tag "Search", name: nil, class: 'button postfix' %>
  </div>
</div>
<% end %>

<div class="row">
  <div class="large-12 columns">
    <table>
      <thead>
        <tr>
          <th><%= link_to "Username", sort: 'username' %></th>
          <th><%= link_to "Role", sort: 'role' %></th>
          <th><%= link_to "Works at", sort: 'venue_id' %></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.role %></td>
          <td><%= user.venue.name unless user.venue.nil? %></td>
          <td class="text-right"><%= link_to 'Edit', edit_user_path(user), class: 'tiny button secondary round' %></td>
          <td class="text-right"><%= link_to 'Delete', user, method: :delete, data: { confirm: "User #{user.username} will be deleted. Are you sure?" }, class: 'tiny button alert round' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="large-12 columns text-right">
    <%= link_to 'New User', new_user_path, class: 'small button round' %>
  </div>
</div>