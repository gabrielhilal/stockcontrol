<h1>Listing Beverage Categories</h1>
<div class="row">
  <div class="large-12 columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="2"></th>
         </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= simple_format(category.description) %></td>
          <td class="text-right"><%= link_to 'Edit', edit_beverage_category_path(category), class: 'tiny button secondary round' %></td>
          <td class="text-right"><%= link_to 'Delete', category, method: :delete, data: { confirm: "Category #{category.name} will be deleted. Are you sure?" }, class: 'tiny button alert round' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="large-12 columns text-right">
    <%= link_to 'New Category', new_beverage_category_path, class: 'small button round' %>
  </div>
</div>
