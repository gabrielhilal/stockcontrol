<h1>Beverage Details</h1>

<div class="row">
  <div class="large-4 columns">
    <h4><%= @menu.name %></h4>
  </div>
  <div class="large-8 columns">
    <%= simple_format(@menu.description) %>
  </div>
</div>
<hr>
<div class="row">
  <div class="large-12 columns">
    <b>Items:</b><br /><br />
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
         </tr>
      </thead>

      <tbody>
        <% @menu.menu_lines.each do |line| %>
        <tr>
          <td><%= line.beverage.name %></td>
          <td>Â£ <%= number_with_precision(line.price, precision: 2) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="large-6 columns">
    <%= link_to 'Back to Menus', menus_path, class: 'small button secondary' %>
  </div>
  <div class="large-6 text-right columns">
    <%= link_to 'Edit', edit_menu_path, class: 'small button secondary round' %>
    <%= link_to 'Delete', @menu, method: :delete, data: { confirm: "Menu #{@menu.name} will be deleted. Are you sure?" }, class: 'small button alert round' %>
  </div>
</div>